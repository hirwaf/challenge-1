    "dotenv": "^10.0.0",
    "glob": "^7.1.7",
    "helmet": "^4.6.0",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "nestjs-config": "^1.4.8",
    "nestjs-redis": "^1.3.3",
    "node-xlsx": "^0.17.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
